<!DOCTYPE html>
<html lang="en">

    <head>

        <title>Planificación</title>

        <link rel="stylesheet" href="/public/stylesheets/planificacion.css">
        <link rel="stylesheet" href="/public/stylesheets/styles.css">
        <link rel="stylesheet" href="/public/stylesheets/map.css">
        <script type="text/javascript" src="/public/scripts/map.js"></script>
        <style>
            #btn-plan {
                background-color: #EE2E0B;
            }
        </style>
    </head>

    <body class="container">

        <%- include('../partials/sidebar'); %>
            <div class="main-continaer plan-simu-container">
                <h1>Planificación</h1>
                <main>
                    <div class="map">

                    </div>
                    <div class="tools">
                        <div class="controls">

                            
                            <h2>Controles</h2>
